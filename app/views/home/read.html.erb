<div class="container">
  <div class="row">
    <div class="span2"></div>
    <div class="span8">
      <div class="content">
        <div class="page">
          <div class="title"><%=@page.title%></div>
          <div class="piece">
            <%=@page.rendered_content%>
          </div>
        </div>
      </div>
    </div>
    <div class="span2">
      <div class="tags">
      <h4>More Articles</h4>      
        <%@page.tags.each do |tag|%>
          <a class="label label-inverse"><%=tag%></a>
        <%end%>
        <a class="label label-inverse">All</a>
      </div>
      <div class="sharing">
        <h4>Share</h4>        
          <div><a href="https://twitter.com/runway_7" class="twitter-follow-button" data-show-count="false">Follow @runway_7</a></div>
          <div><a href="https://twitter.com/share" class="twitter-share-button" data-related="runway_7">Tweet</a></div>                    
          <div><div class="g-plusone" data-size="medium"></div></div>
          <div><div class="fb-like" data-send="false" data-layout="button_count" data-width="200" data-show-faces="false" data-font="lucida grande"></div></div>          

      </div>
    </div>
  </div>
  
</div>
