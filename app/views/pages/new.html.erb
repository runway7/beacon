<div class="container">  
  <div class="row">
    <div class="span12">
      <%= form_for @page, :url => { :action => @page.id ? "update" : "create" }, :html => {:class => "form-horizontal"} do |f| %>
        <div class="control-group">
          <label class="control-label" for="title">Title</label>
          <div class="controls">
            <%= f.text_field :title, :class => 'input-xlarge' %>
          </div>
        </div>
        <div class="control-group">
          <label class="control-label" for="title">URL</label>
          <div class="controls">
            <%= f.text_field :url, :class => 'input-xlarge'%>
          </div>
        </div>
        <div class="control-group">
          <label class="control-label" for="title">Description</label>
          <div class="controls">
            <%= f.text_area :description, :class => 'input-xlarge'%>
          </div>
        </div>
        <div class="control-group">
          <label class="control-label" for="title">Source</label>
          <div class="controls">
            <%= f.text_field :source, :class => 'input-xlarge'%>
          </div>
        </div>
        <div class="control-group">
          <label class="control-label" for="title">Tags</label>
          <div class="controls">
            <%= f.text_field :tags_display, :class => 'input-xlarge'%>
          </div>
        </div>
        <div class="control-group">
          <label class="control-label" for="title">Aliases</label>
          <div class="controls">
            <%= f.text_field :aliases_display, :class => 'input-xlarge'%>
          </div>
        </div>
        


        <div class="form-actions">
          <%= f.submit (@page.id ? "Save" : "Create"), :class => 'btn' %>          
        </div>         
      <% end %>
    </div>
  </div>
</div>

